<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

{% include 'navBar/navBar.view.twig' %}

<div class="container mt-5 d-flex flex-column align-items-center justify-content-center">
    <h1>Login</h1>

    {% for alert in alerts.success %}
        <div class="alert alert-success"  role="alert">
            {{ alert }}
        </div>
    {% endfor %}

    {% for error in errors.login %}
        <div class="alert alert-danger" role="alert">
            {{ error }}
        </div>
    {% endfor %}

    <form method="POST">
        <div class="form-group my-2">
            <label for="email">Email</label>
            <input type="text" class="form-control" name="email" id="email" placeholder="Enter your email address" required>
        </div>
        <div class="form-group my-2">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password" required>
        </div>
        <div class="d-flex my-2" style="justify-content: center">
            <button type="submit" class="btn btn-primary mt-3">Login</button>
        </div>
        <!-- take me to registration page, in a different div and no background -->
        <div>
            <a>Don't have an account? </a><a href="/register">Register here</a>
        </div>
    </form>
</div>

</body>
</html>