<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

{% include 'navBar/navBar.view.twig' %}

{% for error in errors.search %}
    <div class="alert alert-danger" role="alert">
        {{ error }}
    </div>
{% endfor %}

{#Show user FIAT balance#}
<div class="container my-3">
    <div class="row">
        <div class="col-12">
            <h1>Profile</h1>
            <h3>FIAT balance: {{ auth.fiatBalance|number_format(2, '.', ',') }}</span></h3>
        </div>
    </div>

<div class="container mt-5 d-flex  bg-light p-3" style="flex-direction: column">
    <div>
        <a>Name: {{ auth.name }}</a>
    </div>
    <div>
        <a>Email: {{ auth.email }}</a>
    </div>

    <form class="my-2" method="POST">
        <input name="transactionType" value="deposit" type="hidden">
        <input type="number" name="fiatAmount" step="0.01" placeholder="Deposit $">
        <button type="submit" class="btn btn-primary my-2">Deposit</button>
    </form>
    <form class="my-2" method="POST">
        <input name="transactionType" value="withdraw" type="hidden">
        <input type="number" name="fiatAmount" step="0.01" placeholder="Withdraw $">
        <button type="submit" class="btn btn-primary my-2">Withdraw</button>
    </form>
</div>

</body>
</html>