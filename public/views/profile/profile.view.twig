<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .monospace {
            font-family: monospace
        }
    </style>
</head>
<body>

{% include 'navBar/navBar.view.twig' %}

{% for error in errors.search %}
    <div class="alert alert-danger" role="alert">
        {{ error }}
    </div>
{% endfor %}

<h1 style="text-align: center; margin: 1em">Profile</h1>

{% if auth %}
<div class="container my-3">
    {% endif %}

    <div class="container mt-5 d-flex  bg-light p-3" style="flex-direction: column">
        <div>
            <h5>Name: <span class="monospace">{{ auth.name }}</span></h5>
        </div>
        <div>
            <h5>Email: <span class="monospace">{{ auth.email }}</span></h5>
        </div>

        <div class="container d-flex" style="flex-direction: column; margin-top: 4em">
            <h1>Deposit & Withdraw</h1>
            <h6>
                Current FIAT Balance: $ <span
                        class="monospace orangeUnderLine">{{ auth.fiatBalance|number_format(2, '.', ',') }}</span>
            </h6>
            <div class="container d-flex" style="flex-direction: row">
                <div>
                    <form class="my-2" method="POST">
                        <input name="transactionType" value="deposit" type="hidden">
                        <div class="form-group">
                            <label for="fiatAmount">Deposit $</label>
                            <input type="number" class="form-control monospace" id="fiatAmount" name="fiatAmount"
                                   step="0.01"
                                   min="0"
                                   placeholder="$" style="width: 90%">
                        </div>
                        <button type="submit" class="btn btn-primary my-2">Deposit</button>
                    </form>
                </div>
                <div>
                    <form class="my-2" method="POST">
                        <input name="transactionType" value="withdraw" type="hidden">
                        <div class="form-group">
                            <label for="fiatAmount">Withdraw $</label>
                            <input type="number" class="form-control monospace" id="fiatAmount" name="fiatAmount"
                                   step="0.01"
                                   min="0"
                                   placeholder="$" style="width: 90%">
                        </div>
                        <button type="submit" class="btn btn-primary my-2">Withdraw</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>