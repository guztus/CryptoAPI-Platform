<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>FTX Noob</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        td {
            text-align: right;
        }

        th {
            text-align: right;
        }

        #centered {
            text-align: center;
        }
    </style>
</head>
<body>

{% include 'navBar/navBar.view.twig' %}

<div class="d-flex flex-column" style="margin-top: 1.4em">
    {% if auth %}
        <div style="text-align: center">
            <h3>Hello, {{ auth.name }}</h3>
        </div>
    {% endif %}
    <div style="text-align: center">
        <h2>List of 10 coins sorted by market cap</h2>
    </div>
</div>

<div class="container mt-3">
    <table class="table table-light table-striped table-hover table-condensed"
           style="  border-radius: 10px; overflow: hidden; margin-top: 1em">
        <thead>
        <tr>
            <th id="centered">#</th>
            <th id="centered">Logo</th>
            <th id="centered">Symbol</th>
            <th>Price</th>
            <th>24h%</th>
            <th>Volume</th>
            <th>Market Cap</th>
            <th>Link</th>
        </tr>
        </thead>
        <tbody>
        {% for coin in coins %}
            <tr>
                <td id="centered">{{ coin.cmcrank }}</td>
                <td id="centered"><img style="width: 30px" src="https://logo.chainbit.xyz/{{ coin.symbol }}"
                                       alt="{{ coin.symbol }}"></td>
                <td id="centered">{{ coin.symbol }}</td>
                <td>${{ coin.price|number_format(4, '.', ',') }}</td>
                {% if coin.percentChange24h < 0 %}
                    <td style="color: darkred">{{ coin.percentChange24h|number_format(2, '.', ',') }}▼</td>
                {% else %}
                    <td style="color: darkgreen">+{{ coin.percentChange24h|number_format(2, '.', ',') }}▲</td>
                {% endif %}
                <td>${{ coin.volume24h|number_format(2, '.', ',') }}</td>
                <td>${{ coin.marketCap|number_format(2, '.', ',') }}</td>
                <td><a href="/?search={{ coin.symbol }}">Link</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</body>
</html>