{% include 'navBar/navBar.view.twig' %}

<div class="container mt-3">
    <table class="table table-light table-striped table-hover table-bordered table-condensed">
        <thead>
        <tr>
            <th id="centered">Rank</th>
            <th id="centered">Logo</th>
            <th>Symbol</th>
            <th>Price</th>
            <th>24h%</th>
            <th>Market Cap</th>
            <th>Volume</th>
        </tr>
        </thead>
        {% for coin in coins %}
            <tbody>
            <tr>
                <td id="centered">{{ coin.cmcrank }}</td>
                <td id="centered"><img style="width: 30px" src="https://logo.chainbit.xyz/{{ coin.symbol }}"></td>
                <td id="centered">{{ coin.symbol }}</td>
                <td>${{ coin.price|number_format(4, '.', ',') }}</td>
                {% if coin.percentChange24h < 0 %}
                    <td style="color: darkred">{{ coin.percentChange24h|number_format(2, '.', ',') }}</td>
                {% else %}
                    <td style="color: darkgreen">+{{ coin.percentChange24h|number_format(2, '.', ',') }}</td>
                {% endif %}
                <td>${{ coin.marketCap|number_format(2, '.', ',') }}</td>
                <td>${{ coin.volume24h|number_format(2, '.', ',') }}</td>
            </tr>
            </tbody>
        {% endfor %}
        </ul>
    </table>
</div>
